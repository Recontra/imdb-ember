<div class="container">
  <form {{action 'authenticate' on='submit'}} class="form-signin">
    <h2 class="form-signin-heading">Please sign in</h2>
    <label for="inputEmail" class="sr-only">Email address</label>
    {{input id='identification' type="email" class="form-control" placeholder="Email address" required="" autofocus="" value=identification}}
    <label for="inputPassword" class="sr-only">Password</label>
    {{input id='password' type='password' class="form-control" placeholder="Password" required="" value=password}}
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    {{#if errorMessage}}
      <p>{{errorMessage}}</p>
    {{/if}}
  </form>

</div>
