<div class="container">
  <form {{action 'register' on='submit'}} class="form-signin">
    <h2 class="form-signin-heading">Please enter you data</h2>
    <label for="inputEmail" class="sr-only">Name</label>
    {{input placeholder="Name" class="form-control" required="" autofocus="" value=user.name}}
    <label for="inputEmail" class="sr-only">Email address</label>
    {{input type="email" placeholder="Email" class="form-control" required="" autofocus="" value=user.email}}
    <label for="inputPassword" class="sr-only">Password</label>
    {{input placeholder="Password" type='password' class="form-control"required="" value=user.password}}
    <label for="inputPassword" class="sr-only">Confrim password</label>
    {{input placeholder='Confirm Password' type='password' class="form-control last" required="" value=user.passwordConfirmation}}
    <button class="btn btn-lg btn-primary btn-block" type="submit">Register in</button>
    {{#if errorMessage}}
      <p>{{errorMessage}}</p>
    {{/if}}
  </form>

</div>
